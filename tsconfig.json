{
  "compilerOptions": {
    /* Project Options */
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "checkJs": true,

    /* --- ИСПРАВЛЕНИЕ: Добавляем paths для разрешения модулей NodeNext --- */
    "paths": {
      "@metaplex-foundation/*": ["./node_modules/@metaplex-foundation/*"]
    },

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,

    /* Source Maps */
    "sourceMap": false,

    /* Additional Settings */
    "lib": ["ES2022"],
    "types": ["node", "express"]
  },
  "include": [
    "server.ts",
    "src/**/*.js",
    "src/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
